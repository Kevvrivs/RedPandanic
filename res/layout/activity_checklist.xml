<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/hekler"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pandapanic.ChecklistActivity" >

    <EditText
        android:id="@+id/itemName"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#bebebe"
        android:hint="Enter Your Budget"
        android:textSize="18dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/creativejoin"
        android:gravity="center"
        android:text="Get Supply Recommendation"
        android:textColor="#f8ede4"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/listItem"
        android:background="@drawable/borderbase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="15dp" >
    </ListView>

</LinearLayout>