<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pengu"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pandapanic.LoginActivity" >

    <ImageView
        android:id="@+id/titleImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:contentDescription="@string/descRep"
        android:src="@drawable/unnamed" />

    <EditText
        android:id="@+id/txtUser"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:background="#fbf5e4"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:labelFor="@id/txtUser"
        android:textColor="#543d2a"
        android:textSize="40dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#fbf5e4"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:labelFor="@id/txtPassword"
        android:textColor="#543d2a"
        android:textSize="40sp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#15CAB1"
        android:textSize="30dp"
        android:text="@string/login"
        android:textColor="#2A2C31" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#15CAB1"
        android:text="@string/register"
        android:textSize="30dp"
        android:textColor="#2A2C31" />

</LinearLayout>