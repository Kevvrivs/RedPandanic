<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/normal"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pandapanic.ToDoListActivity" >
    
    <EditText
        android:id = "@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:background="#bebebe"
        android:hint="@string/desc" />
    
     <ListView
         android:id="@+id/toDoListItem"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/borderbase"
         android:layout_below="@+id/text"
         android:layout_marginTop="70dp" >

    </ListView>

     <Button
         android:id="@+id/btnAdd"
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="50dp"
       android:background="@drawable/creativejoin"
         android:textSize="18dp"
         android:layout_alignLeft="@+id/toDoListItem"
         android:layout_below="@+id/text"
         android:textColor="#f8ede4"
         android:text="@string/Add" />

</RelativeLayout>
