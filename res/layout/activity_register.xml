<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/titleLabel"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="140dp"
        android:src="@drawable/prevkitlogo" />
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
 
    <ImageView
        android:id="@+id/nameReg"
        android:layout_width="40dp"
        android:layout_height="40dp"
         android:layout_marginTop="20dp"
        android:background="@drawable/logbox"
        android:contentDescription="@string/descRep"
        android:src="@drawable/username" />
    
    <EditText
        android:id="@+id/reguserFullName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"  
        android:hint="Full Name"
        android:background="#bebebe"
        android:ems="10"
        android:textSize="18dp"
        android:inputType="text"
        android:textColor="#363636"
        android:labelFor="@id/reguserFullName"
        >

        <requestFocus />
    </EditText>    
    
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
 
    <ImageView
        android:id="@+id/userReg"
        android:layout_width="40dp"
        android:layout_height="40dp"
         android:layout_marginTop="20dp"
        android:background="@drawable/logbox"
        android:contentDescription="@string/descRep"
        android:src="@drawable/username" />

    <EditText
        android:id="@+id/reguserText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"  
        android:hint="Username"
        android:background="#bebebe"
        android:ems="10"
        android:textSize="18dp"
        android:inputType="text"
        android:textColor="#363636"
        android:labelFor="@id/reguserText"
        >

        <requestFocus />
    </EditText>

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
 
    <ImageView
        android:id="@+id/passReg"
        android:layout_width="43dp"
        android:layout_height="40dp"
         android:layout_marginTop="10dp"
        android:background="@drawable/logbox"
        android:contentDescription="@string/descRep"
        android:src="@drawable/password" />

    <EditText
        android:id="@+id/regpassText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"  
        android:layout_marginTop="10dp"
        android:background="#bebebe"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#363636"
        android:labelFor="@id/regpassText"
        />
    
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
 
    <ImageView
        android:id="@+id/confpassReg"
        android:layout_width="43dp"
        android:layout_height="40dp"
         android:layout_marginTop="10dp"
        android:background="@drawable/logbox"
        android:contentDescription="@string/descRep"
        android:src="@drawable/password" />
    
    <EditText
        android:id="@+id/confpassText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"  
        android:background="#bebebe"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#363636"
        android:labelFor="@id/confpassText"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
 
    <ImageView
        android:id="@+id/emailReg"
        android:layout_width="40dp"
        android:layout_height="40dp"
         android:layout_marginTop="10dp"
        android:background="@drawable/logbox"
        android:contentDescription="@string/descRep"
        android:src="@drawable/mail" />
    
    <EditText
        android:id="@+id/emailText"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"  
        android:layout_marginTop="10dp"
        android:background="#bebebe"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#363636"
        android:labelFor="@id/emailText"
        />

</LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="20dp"
        android:textColor="#f8ede4"
       android:background="@drawable/inbox"
        android:text="@string/register" />

</LinearLayout>
